# =========================================
# AUTOCLIPSTER - ENVIRONMENT VARIABLES EXAMPLE
# =========================================
# Copy this file to .env and fill with your actual values

# ===================
# APPLICATION SETTINGS
# ===================
SPRING_PROFILES_ACTIVE=test
SPRING_APPLICATION_NAME=AutoClipster

# ===================
# TWITCH API SETTINGS (REQUIRED)
# ===================
# Get these from: https://dev.twitch.tv/console/apps
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here

# ===================
# GEMINI AI SETTINGS (REQUIRED)
# ===================
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL_NAME=gemini-1.5-flash
GEMINI_MAX_TOKENS=8192
GEMINI_TEMPERATURE=0.7
GEMINI_TOP_P=0.9
GEMINI_TOP_K=40

# ===================
# DATABASE SETTINGS (REQUIRED)
# ===================
DATABASE_URL=jdbc:postgresql://localhost:5432/autoclipster
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_password_here
DATABASE_DRIVER=org.postgresql.Driver

# ===================
# CLIPS CONFIGURATION
# ===================
CLIPS_DOWNLOAD_PATH=./downloads
DOWNLOAD_TIMEOUT=300
MAX_CONCURRENT_DOWNLOADS=3
CLIPS_STORAGE_DAYS=30

# ===================
# AI PROCESSING SETTINGS
# ===================
AI_ENABLED=true
AI_BATCH_SIZE=5
AI_RETRY_MAX_ATTEMPTS=3
AI_RETRY_DELAY=5000
AI_RATE_LIMIT_REQUESTS=60
AI_RATE_LIMIT_PERIOD=60000

# ===================
# YOUTUBE API SETTINGS (OPTIONAL)
# ===================
# Get these from: https://console.cloud.google.com/
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here
YOUTUBE_REDIRECT_URI=http://localhost:8080/auth/youtube/callback
YOUTUBE_AUTO_UPLOAD=false

# ===================
# N8N INTEGRATION (OPTIONAL)
# ===================
N8N_WEBHOOK_URL=http://localhost:5678/webhook/autoclipster
N8N_ENABLED=false

# ===================
# QUALITY CONTROL
# ===================
AI_MIN_TITLE_LENGTH=30
AI_MAX_TITLE_LENGTH=100
AI_MIN_DESCRIPTION_LENGTH=200
AI_MAX_DESCRIPTION_LENGTH=5000
AI_MIN_TAGS=5
AI_MAX_TAGS=15

# ===================
# MONITORING & LOGGING
# ===================
LOG_LEVEL=INFO
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password

# ===================
# DEVELOPMENT SETTINGS
# ===================
DEBUG_MODE=false
SHOW_SQL=false
FORMAT_SQL=true 